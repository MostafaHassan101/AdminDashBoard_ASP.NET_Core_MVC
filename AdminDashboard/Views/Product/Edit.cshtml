@model AdminDashboard.Models.ProductModel
@{
    ViewData["Title"] = "Edit Product";
    var brans = ViewBag.brands;
    var product = ViewBag.Product;
    var categories = ViewBag.categories;
    var Colors_Images = ViewBag.Prd;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <style>
        .card-primary:not(.card-outline) > .card-header a {
            color: #000;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini">

    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="breadcrumb-item active">Edit Product</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Edit Product</h3>
                            </div>
                            <form asp-action="Edit" enctype="multipart/form-data">
                              <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                        <label asp-for="Name" class="control-label" for="exampleInputName">Product Name</label>
                                        <input asp-for="Name"  class="form-control" required value="@product.Name" type="string" id="exampleInputName" placeholder="Product Name" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                        <label asp-for="NameAr" class="control-label" for="exampleInputNameAr">ProductNameAr</label>
                                        <input asp-for="NameAr" class="form-control" required value="@product.NameAr" type="string" id="exampleInputNameAr" placeholder="Product NameAr" />
                                    <span asp-validation-for="NameAr" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                        <label asp-for="Description" class="control-label" for="exampleInputDescription">Description</label>
                                        <input asp-for="Description" required class="form-control" value="@product.Description" type="string" id="exampleInputDescription" placeholder="Description Name" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                        <label asp-for="DescriptionAr" class="control-label" for="exampleInputDescriptionAr">DescriptionAr</label>
                                        <input asp-for="DescriptionAr" required class="form-control" value="@product.DescriptionAr" type="string" id="exampleInputDescriptionAr" placeholder="DescriptionAR Name" />
                                    <span asp-validation-for="DescriptionAr" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                        <label asp-for="Price" class="control-label" for="exampleInputPrice">Price</label>
                                        <input asp-for="Price" required class="form-control" value="@product.Price" type="number" id="exampleInputPrice" placeholder="Price Number" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                        <label asp-for="ImagePath" class="control-label" for="exampleInputImagePath">ImagePath URL</label>
                                        <input asp-for="ImagePath" required class="form-control" value="@product.ImagePath" type="text" id="exampleInputImagePath" placeholder="ImagePath URl" />
                                        <span asp-validation-for="ImagePath" class="text-danger"></span>
                                 </div>
                                <div class="form-group">
                                        <label asp-for="Sizes" class="control-label" for="exampleInputSizes">Sizes</label>
                                        <input asp-for="Sizes" required class="form-control" value="@product.Sizes" type="string" id="exampleInputSizes" placeholder="Sizes Name" />
                                    <span asp-validation-for="Sizes" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                        <label asp-for="Discount" class="control-label" for="exampleInputDiscount">Discount</label>
                                        <input asp-for="Discount" required class="form-control" value="@product.Discount" type="number" id="exampleInputDiscount" placeholder="Discount Percentage %" />
                                    <span asp-validation-for="Discount" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                        <label asp-for="Quantity" class="control-label" for="exampleInputQuantity">Quantity</label>
                                        <input asp-for="Quantity" required class="form-control" value="@product.Quantity" type="number" id="exampleInputQuantity" placeholder="Quantity Number" />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                        <label asp-for="ModelNumber" class="control-label" for="exampleInputModelNumber">ModelNumber</label>
                                        <input asp-for="ModelNumber" required class="form-control" value="@product.ModelNumber" type="string" id="exampleInputModelNumber" placeholder="ModelNumber Name" />
                                    <span asp-validation-for="ModelNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                        <label asp-for="CategoryId" class="control-label" for="exampleInputCategoryId">Name Category</label>
                                        <select asp-for="CategoryId" required class="form-control select2" id="exampleInputCategoryId" style="width: 100%;">
                                            <option value="@product.Category.Id" selected>@product.Category.Name</option>
                                            @foreach (var cat in categories)
                                            {
                                                <option value="@cat.Id">@cat.Name</option>
                                            }
                                        </select>
                                    </div>
                                <div class="form-group">
                                   <label asp-for="BrandId" class="control-label" for="exampleInputBrandId">Name Brand</label>
                                   <select asp-for="BrandId" required class="form-control select2" id="exampleInputBrandId" style="width: 100%;">
                                      <option value="@product.Brand.Id" selected>@product.Brand.Name</option>
                                        @foreach (var p in brans)
                                         {
                                          <option value="@p.Id">@p.Name</option>
                                         }
                                   </select>
                                </div>
                                <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                              </div>
                            </form>
                            <div class="card-footer">
                                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="float:right">Back to List</a>
                            </div>
                            @{
                                await Html.RenderPartialAsync("_ValidationScriptsPartial");
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card card-primary">
                                <div class="card-header bg-light">
                                    <div class="row">
                                        <a asp-action="CreateImageeProduct" asp-route-id="@Colors_Images.Id" class="btn btn-outline-primary col-lg- col-6 text-black">Add Images</a>
                                    <a asp-action="CreateColorProduct" asp-route-id="@Colors_Images.Id" class="btn btn-outline-info col-lg- col-6 text-black">Add Colors</a>
                                    </div>
                                </div>
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>
                                                ID
                                            </th>
                                            <th>
                                                ImagePath
                                            </th>
                                            <th>
                                                ProductId
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Colors_Images.ProductImages)
                                        {
                                            <tr>
                                                <td>
                                                    @item.Id
                                                </td>
                                                <td style="justify-content: center;">
                                                    <img src="@item.ImagePath" sp-for="ImagePath" class="form-control" id="exampleInputProductimage" style="width :50%;height : 100px" />
                                                </td>
                                                <td>
                                                    @item.ProductId
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger" asp-action="DeleteImageProduct" asp-route-id="@Colors_Images.Id" asp-route-Idcolor="">  Sure Delete Image</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>
                                                Name color
                                            </th>
                                            <th>
                                                HexValue
                                            </th>
                                            <th>
                                                Delete
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Colors_Images.ProductColors)
                                        {
                                            <tr>
                                                <td>
                                                    @item.Name
                                                </td>
                                                <td>
                                                    @item.HexValue
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger" asp-action="DeleteColorProduct" asp-route-id="@Colors_Images.Id" asp-route-Idcolor="">  Sure Delete Color</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
    </div>
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- bs-custom-file-input -->
    <script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/dist/js/demo.js"></script>
    <!-- Page specific script -->
    <script>
        $(function () {
            bsCustomFileInput.init();
        });
    </script>
</body>
</html>
