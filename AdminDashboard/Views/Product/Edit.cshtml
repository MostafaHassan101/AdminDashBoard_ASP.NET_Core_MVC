<body class="hold-transition sidebar-mini">

    <div class="content-wrapper">

        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="breadcrumb-item active">Edit Product</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Edit Product</h3>
                            </div>
                            <form asp-action="Edit" enctype="multipart/form-data">
                              <div class="card-body">

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                        <label asp-for="Name" class="control-label" for="exampleInputName">Product Name</label>
                                        <input asp-for="Name"  class="form-control" value="@product.Name" type="string" id="exampleInputName" placeholder="Product Name" />
                                </div>
                                <div class="form-group">
                                        <label asp-for="NameAr" class="control-label" for="exampleInputNameAr">ProductNameAr</label>
                                        <input asp-for="NameAr"  class="form-control" value="@product.NameAr" type="string" id="exampleInputNameAr" placeholder="Product NameAr" />
                                    <span asp-validation-for="NameAr" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                        <label asp-for="Description" class="control-label" for="exampleInputDescription">Description</label>
                                        <input asp-for="Description"  class="form-control" value="@product.Description" type="string" id="exampleInputDescription" placeholder="Description Name" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                        <label asp-for="DescriptionAr" class="control-label" for="exampleInputDescriptionAr">DescriptionAr</label>
                                        <input asp-for="DescriptionAr"  class="form-control" value="@product.DescriptionAr" type="string" id="exampleInputDescriptionAr" placeholder="DescriptionAR Name" />
                                    <span asp-validation-for="DescriptionAr" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                        <label asp-for="Price" class="control-label" for="exampleInputPrice">Price</label>
                                        <input asp-for="Price"  class="form-control" value="@product.Price" type="number" id="exampleInputPrice" placeholder="Price Number" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                        <label asp-for="Sizes" class="control-label" for="exampleInputSizes">Sizes</label>
                                        <input asp-for="Sizes"  class="form-control" value="@product.Sizes" type="string" id="exampleInputSizes" placeholder="Sizes Name" />
                                    <span asp-validation-for="Sizes" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                        <label asp-for="Discount" class="control-label" for="exampleInputDiscount">Discount</label>
                                        <input asp-for="Discount"  class="form-control" value="@product.Discount" type="number" id="exampleInputDiscount" placeholder="Discount Percentage %" />
                                    <span asp-validation-for="Discount" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                        <label asp-for="Quantity" class="control-label" for="exampleInputQuantity">Quantity</label>
                                        <input asp-for="Quantity"  class="form-control" value="@product.Quantity" type="number" id="exampleInputQuantity" placeholder="Quantity Number" />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                        <label asp-for="ModelNumber" class="control-label" for="exampleInputModelNumber">ModelNumber</label>
                                        <input asp-for="ModelNumber" class="form-control" value="@product.ModelNumber" type="string" id="exampleInputModelNumber" placeholder="ModelNumber Name" />
                                    <span asp-validation-for="ModelNumber" class="text-danger"></span>
                                </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div>
                                                <div class="form-group">
                                                    <label asp-for="CategoryId" class="control-label" for="exampleInputCategoryId">Name Category</label>
                                                    <select asp-for="CategoryId"  class="form-control select2" id="exampleInputCategoryId" style="width: 100%;">
                                                        <option value="@product.Category.Id" selected>@product.Category.Name</option>
                                                        @foreach (var cat in categories)
                                                        {
                                                            <option value="@cat.Id" >@cat.Name</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                            <div>
                                                <div class="form-group">
                                                    <label asp-for="BrandId" class="control-label" for="exampleInputBrandId">Name Brand</label>
                                                    <select asp-for="BrandId"  class="form-control select2" id="exampleInputBrandId" style="width: 100%;">
                                                        <option value="@product.Brand.Id" selected>@product.Brand.Name</option>
                                                        @foreach (var p in brans)
                                                        {
                                                            <option value="@p.Id" >@p.Name</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
